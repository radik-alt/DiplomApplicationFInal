<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110sp"
    android:background="?attr/colorPrimary"
    android:id="@+id/bgAchievment">

    <LinearLayout
        android:padding="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageAchievement"
            android:src="@drawable/climbing"
            android:layout_width="70sp"
            android:layout_height="70sp"/>

    </LinearLayout>



    <LinearLayout
        android:paddingTop="15sp"
        android:paddingStart="15sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nameAchievment"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="20sp"
            android:gravity="left"
            android:text="TextNAMe"
            android:layout_marginBottom="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/descriptionAchievment"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="16sp"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:text="@string/common_google_play_services_enable_text"
            android:layout_width="match_parent"
            android:layout_height="60sp"/>


    </LinearLayout>

</LinearLayout>